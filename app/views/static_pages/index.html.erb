<div class="container">
	<div class="jumbotron">
	<h1>Scraped Results</h1>
	<%=form_tag("/",method:'get') do %>
	<%=label_tag(:search,"Search Reddit for:")%>
	<%=text_field_tag(:search)%>
	<%= radio_button_tag(:site, "Reddit") %>
	<%= label_tag(:site_reddit, "Search Reddit") %>
	<%= radio_button_tag(:site, "Digg") %>
	<%= label_tag(:site_digg, "Search Digg") %>
	<%=submit_tag("Search")%>
	<%end%>
	</div>

  <div class="row">
    <div class="col-lg-2">
    </div>
    <div class="col-lg-10">
    	<%@titles.each do |x| %>
        <p><h2><li><%= x.text%></li></h2></p>
        <p><h3><a href="<%= x.attributes["href"].value%>">View this Post</a><h3></p>
        <%end%>
    </div>
